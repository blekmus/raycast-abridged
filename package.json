{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "abridged",
  "title": "Abridged",
  "description": "Abridged Anime. But in Raycast!",
  "icon": "command-icon.png",
  "author": "blekmus",
  "license": "MIT",
  "commands": [
    {
      "name": "abridged",
      "title": "Abridged Anime",
      "description": "Template for showing a static list and a detail view",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "abridgedDir",
      "title": "Abridged Directory",
      "description": "The directory where your abridged files are stored",
      "type": "directory",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.58.0",
    "@raycast/utils": "^1.9.1",
    "string-natural-compare": "^3.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@types/string-natural-compare": "^3.0.2",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
